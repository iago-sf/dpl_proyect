// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId    Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  username  String   @db.VarChar(15)
  email     String   @unique @db.VarChar(25)

  portfolios Portfolio[]
}

model Portfolio {
  portfolioId Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  name        String   @db.VarChar(20)
  description String?  @db.VarChar(255)

  owner   User        @relation(fields: [ownerId], references: [userId])
  ownerId Int
  Cryptos addCrypto[]
}

model Crypto {
  cryptoId Int    @id @default(autoincrement())
  name     String @unique @db.VarChar(20)
  tag      String @unique @db.VarChar(8)
  icon     String @db.VarChar(255)
  supply   BigInt @default(0) @db.BigInt

  Portfolios addCrypto[]
}

model addCrypto {
  id         Int      @id @default(autoincrement())
  cuantity   Decimal  @db.Decimal(17, 10)
  addedPrice Decimal  @db.Decimal(17, 10)
  addedAt    DateTime @default(now())

  portfolio   Portfolio @relation(fields: [portfolioId], references: [portfolioId], onDelete: Cascade)
  portfolioId Int
  crypto      Crypto    @relation(fields: [cryptoId], references: [cryptoId], onDelete: Cascade)
  cryptoId    Int
}
